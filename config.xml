<?xml version="1.0" encoding="utf-8"?>
<widget xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" id="com.courserv.mordecai" version="1.0.1">
  <name>mordecai</name>
  <description>
        Mordecai App
    </description>
  <author email="ccwalkerjm@gmail.com" href="http://courserv.com">
        Courtney Walker
    </author>
  <content src="index.html"/>
  <plugin name="cordova-plugin-whitelist" spec="1"/>
  <plugin name="cordova-plugin-geolocation" spec="~4.0.1" />
  <platform name="android">
    <allow-intent href="market:*"/>
  </platform>
  <platform name="ios">
    <allow-intent href="itms:*"/>
    <allow-intent href="itms-apps:*"/>
  </platform>
  <access origin="*"/>
  <preference name="Orientation" value="default"/>
  <preference name="SplashScreenDelay" value="10"/>
  <preference name="Fullscreen" value="true"/>
  <preference name="android-minSdkVersion" value="19"/>
</widget>